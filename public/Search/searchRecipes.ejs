  <% include ../partials/header %>
  <!-- navbar -->
  <% include ../partials/navbar %>

  <div class="jumbotron jumbotron-fluid SearchJumbotron">
    <div class="container">
      <h1 class="display-4">Search</h1>
      <p class="lead">Looking for new recipes to try, just search what you are craving and see what you find!</p>
    </div>
    <!-- carousel images -->
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel" data-interval="3000">
      <div class="carousel-inner" style="margin:auto; max-width: 100%;max-height:700px">
        <div class="carousel-item active">
          <img class="d-block w-100" src="/../images/food_pic-1.jpeg" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="/../images/food_pic-2.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="/../images/food_pic-3.jpg" alt="Third slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="/../images/food_pic-4.jpg" alt="Fourth slide">
        </div>
      </div>
    </div>
  </div>

  <div class="SearchInfo">
    <p>Type in the search bar for recipes that you are looking for.</p>
    <p>If you want to perform an advanced search, click on the "Advanced Search" button and then fill out the form.</p>
  </div>

  <form class="form-inline" action='/Search/searchRecipes/search' method='GET'>
    <div class="form-group col-lg-6 justify-content-center">
      <div class="input-group">
         <input class="form-control py-2 rounded-pill mr-1 pr-5" name="search" type="search" placeholder="search" required>
         <span class="input-group-append">
             <button class="btn rounded-pill border-0 ml-n5" type="submit">
                   <i class="fa fa-search"></i>
             </button>
         </span>
     </div>
    </div>
    <div class="form-group col-lg-6 justify-content-center">
      <p><a class="AdvancedSearchButton btn btn-primary" data-toggle="collapse" data-target="#AdvancedSearchCollapse" role="button" aria-expanded="false" aria-controls="AdvancedSearchCollapse" style="background-color: #d1cfcf; border-color:black; color:black;">Advanced Search</a></p>
    </div>
  </form>

  <!-- form for advanced search button -->
  <div class="SearchAdvancedForm collapse" id="AdvancedSearchCollapse">
    <form  style="margin: auto; width:90%" action='/Search/searchRecipes/advanced' method='GET'>
      <div class="form-group">
        <label for="Keyword" style="margin-top: 10px;">Keyword</label>
        <input name ="keyword" id="keyword" type="text" class="form-control" placeholder="Ex: Pizza" required>
      </div>
      <!-- star rating -->
      <div class="form-group StarRating">
        <p>Star Rating</p>
        <span class="rating">
        <input type="radio" class="rating-input"
            id="rating-input-5" name="rating_input" value='5'>
        <label for="rating-input-5" class="rating-star"></label>
        <input type="radio" class="rating-input"
            id="rating-input-4" name="rating_input" value='4'>
        <label for="rating-input-4" class="rating-star"></label>
        <input type="radio" class="rating-input"
            id="rating-input-3" name="rating_input" value='3'>
        <label for="rating-input-3" class="rating-star"></label>
        <input type="radio" class="rating-input"
            id="rating-input-2" name="rating_input" value='2'>
        <label for="rating-input-2" class="rating-star"></label>
        <input type="radio" class="rating-input"
            id="rating-input-1" name="rating_input" value='1'>
        <label for="rating-input-1" class="rating-star"></label>
        </span>
      </div>
      <div class="form-group">
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" name="glutenFree" id="inlineCheckbox1" value="Gluten-Free">
          <label class="form-check-label" for="inlineCheckbox1">Gluten-Free</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" name="vegetarian" id="inlineCheckbox2" value="Vegetarian">
          <label class="form-check-label" for="inlineCheckbox2">Vegetarian</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" name="vegan" id="inlineCheckbox3" value="Vegan">
          <label class="form-check-label" for="inlineCheckbox3">Vegan</label>
        </div>
      </div>
      <!-- ingredient list for user to input ingredients -->
      <div class="form-group" id="IngredientButtons" class="btn-group" role="group" aria-label="Basic example">
          <input class="btn btn-dark" type="button" value="Add Ingredient" style="background-color:grey; margin-bottom: 10px" onclick="createNewElement();">
          <input id="RemoveButton" class='btn btn-dark' type='button' value='Remove Ingredient' style='background-color:grey; margin-bottom: 10px' onclick='removeIngredient()' disabled>
       </div>
       <div class="form-group" id="SearchIngredients">
        <!-- input ingredient inputs if button clicked -->
       </div>
       <!-- maximum make time for recipe -->
       <div class="form-group">
         <label for="max_time">Maximum Make Time</label>
         <div>
           <input class="form-control col-md-2" name="max_time" type="number" id="max_time" placeholder="30">
         </div>
       </div>
       <div>
         <button type="submit" class="btn btn-dark" style="margin-top: 10px;margin-bottom: 10px;">Search</button>
      </div>
    </form>
  </div>

  <form>
    <p>Search: <%= search%></p>
  </form>

  <script src="/../Search/SearchRecipes.js"></script>


  <% include ../partials/footer %>
